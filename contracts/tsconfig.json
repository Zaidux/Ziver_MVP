{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "build",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "scripts/**/*",
        "tests/**/*",
        "wrappers/**/*"
    ]
}
