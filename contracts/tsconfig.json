{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "declaration": true,
    "outDir": "./build"
  },
  "include": [
    "scripts/**/*",
    "tests/**/*",
    "wrappers/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
