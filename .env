# Database connection URL
# Example for PostgreSQL: postgresql+psycopg2://user:password@host:port/dbname
DATABASE_URL="postgresql+psycopg2://ziver_user:your_secure_password@localhost:5432/ziver_db"

# Secret key for JWT token encryption.
# Generate a strong, random key for production.
# Example: openssl rand -hex 32
SECRET_KEY="a_very_secret_and_long_key_that_you_should_change_in_production"

# Algorithm for JWT token. HS256 is common for symmetric keys.
ALGORITHM="HS256"

# Access token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=60
